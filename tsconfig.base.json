{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@utils":        ["./src/utils"],
      "@utils/*":      ["./src/utils/*"],
      "@hooks":        ["./src/hooks"],
      "@hooks/*":      ["./src/hooks/*"],
      "@components":   ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@pages":        ["./src/pages"],
      "@pages/*":      ["./src/pages/*"],
    },
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
